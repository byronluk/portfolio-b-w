  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="heading">Contact</h2>
        <div class="row">
          <div class="col-md-6">
            <form id="contact-form" method="post" action="/contact" class="contact-form">
              <div class="controls">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="name">Your firstname *</label>
                      <input type="text" name="firstName" placeholder="Enter your firstname" required="required" class="form-control">
